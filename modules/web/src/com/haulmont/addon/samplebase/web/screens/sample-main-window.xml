<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="mainMsg://application.caption"
        class="com.haulmont.addon.samplebase.web.screens.SampleMainWindow"
        messagesPack="com.haulmont.addon.samplebase.web.screens"
        xmlns:main="http://schemas.haulmont.com/cuba/mainwindow.xsd">
    <layout expand="horizontalWrap">
        <frame id="infoFrame"
               screen="info-frame"/>
        <hbox id="horizontalWrap"
              expand="workArea"
              stylename="c-sidemenu-layout"
              width="100%">
            <vbox id="sideMenuPanel"
                  height="100%"
                  margin="false,false,true,false"
                  spacing="true"
                  stylename="c-sidemenu-panel"
                  width="AUTO">
                <main:sideMenu id="sideMenu"
                               height="100%"
                               width="100%"/>
            </vbox>
            <main:workArea id="workArea"
                           height="100%">
                <main:initialLayout margin="true"
                                    spacing="true"/>
            </main:workArea>
        </hbox>
    </layout>
</window>
